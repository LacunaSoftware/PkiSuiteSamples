extends ../layout

block content

   h2(class='ls-title') PAdES Signature with PKI Express

   p File signed successfully!

   p
      | Signer information:
      ul
         li Subject: #{signerCert.subjectName.commonName}
         li Email: #{signerCert.emailAddress}
         li ICP-Brasil fields
            ul
               li Tipo de certificado: #{signerCert.pkiBrazil.certificateType}
               li CPF: #{signerCert.pkiBrazil.cpfFormatted}
               li Responsavel: #{signerCert.pkiBrazil.responsavel}
               li Empresa: #{signerCert.pkiBrazil.companyName}
               li CNPJ: #{signerCert.pkiBrazil.cnpjFormatted}
               li RG: #{signerCert.pkiBrazil.rgNumero} #{signerCert.pkiBrazil.rgEmissor} #{signerCert.pkiBrazil.rgEmissorUF}
               li OAB: #{signerCert.pkiBrazil.oabNumero} #{signerCert.pkiBrazil.oabUF}

   h3 Actions:
   ul
      li
         a(href=`/download?fileId=${signedPdf}`, target='_blank') Download the signed file
      li
         a(href=`printer-version-pades-express?fileId=${signedPdf}`, target='_blank') Download a printer-friendly version of the signed file
      li
         a(href=`/timestamp-pdf-express?fileId=${signedPdf}`) Download a timestamped version of the signed file
      li
         a(href=`/open-pades-express?fileId=${signedPdf}`)  Open/validate the signed file
      li
         a(href=`/pades-signature-express?fileId=${signedPdf}`) Co-sign with another certificate