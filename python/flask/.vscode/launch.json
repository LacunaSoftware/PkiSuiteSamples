    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "sample",
                "FLASK_ENV":"development",
                "FLASK_DEBUG": "1",
            },
            "args": [
                "run",
            ],
            "jinja": true,
            "autoStartBrowser": false,
            "justMyCode": false
        }
    ]
}