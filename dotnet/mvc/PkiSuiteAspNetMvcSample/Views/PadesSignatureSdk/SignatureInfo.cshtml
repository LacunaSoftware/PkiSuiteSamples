@using PkiSuiteAspNetMvcSample.Models.Sdk
@model SignatureInfoModel

<h2 class="ls-title">PAdES Signature with PKI SDK</h2>

<p>File signed successfully!</p>

<h3>Actions:</h3>
<ul>
	<li><a href="/Download/File/@Model.File">Download the signed file</a></li>
	<li><a href="/PrinterFriendlyPadesSdk?userfile=@Model.File">Download a printer-friendly version of the signed file</a></li>
	<li><a href="/OpenPadesSignatureSdk?userfile=@Model.File">Open/validate the signed file</a></li>
	<li><a href="/PadesSignatureSdk?cmsfile=@Model.File">Co-sign with another certificate</a></li>
</ul>
