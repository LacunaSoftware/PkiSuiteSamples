@using PkiSuiteAspNetMvcSample.Models.Rest
@model SignatureInfoModel

<h2 class="ls-title">PAdES Signature with REST PKI</h2>

<p>File signed successfully!</p>

<p>
	Signer information:
	<ul>
		<li>Subject: @Model.SignerCertificate.SubjectName.CommonName</li>
		<li>Email: @Model.SignerCertificate.EmailAddress</li>
		<li>
			ICP-Brasil fields
			<ul>
				<li>Tipo de certificado: @Model.SignerCertificate.PkiBrazil.CertificateType</li>
				<li>CPF: @Model.SignerCertificate.PkiBrazil.Cpf</li>
				<li>Responsavel: @Model.SignerCertificate.PkiBrazil.Responsavel</li>
				<li>Empresa: @Model.SignerCertificate.PkiBrazil.CompanyName</li>
				<li>CNPJ: @Model.SignerCertificate.PkiBrazil.Cnpj</li>
				<li>RG: @Model.SignerCertificate.PkiBrazil.RGNumero @Model.SignerCertificate.PkiBrazil.RGEmissor @Model.SignerCertificate.PkiBrazil.RGEmissorUF</li>
				<li>OAB: @Model.SignerCertificate.PkiBrazil.OabNumero @Model.SignerCertificate.PkiBrazil.OabUF</li>
			</ul>
		</li>
	</ul>
</p>

<h3>Actions:</h3>
<ul>
	<li><a href="/Download/File/@Model.File">Download the signed file</a></li>
	<li><a href="/PrinterFriendlyPadesRest?userfile=@Model.File">Download a printer-friendly version of the signed file</a></li>
	<li><a href="/OpenPadesSignatureRest?userfile=@Model.File">Open/validate the signed file</a></li>
	<li><a href="/PadesSignatureRest?userfile=@Model.File">Co-sign with another certificate</a></li>
</ul>
