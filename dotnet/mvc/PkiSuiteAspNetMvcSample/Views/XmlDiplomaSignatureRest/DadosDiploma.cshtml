@using PkiSuiteAspNetMvcSample.Models.Rest
@model SignatureXmlModel
<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org" th:include="layout :: page">
<body>

    <div th:fragment="content">
        <h2 class="ls-title">Assinatura de Diploma com REST PKI</h2>
        <h5 class="ls-subtitle">Elemento <i>DadosDiploma</i> Assinado com sucesso! <i class="fas fa-check-circle text-success"></i></h5>

